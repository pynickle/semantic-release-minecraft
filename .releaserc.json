{
  "branches": [
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "docs", "section": "ğŸ“š Documentation" },
            { "type": "style", "section": "ğŸ’„ Style Improvements" },
            { "type": "ref", "section": "â™»ï¸ Code Refactoring" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ğŸ“¦ Build System" },
            { "type": "ci", "section": "ğŸ‘· CI/CD" },
            { "type": "chore", "section": "ğŸ”§ Miscellaneous Changes" }
          ]
        },
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "ref",
      "release": "patch"
    },
    {
      "type": "style",
      "release": "patch"
    }
  ]
}
